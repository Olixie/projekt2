<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ekran_glowny_przewodnik">

    <android.support.v7.widget.GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/b_mapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mapa" />

        <Button
            android:id="@+id/b_komunikat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj komunikat"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/b_uczestnicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="saveButtonUser"
            android:text="Dodaj Uczestnika wycieczki"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/b_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan wycieczki"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/b_notatki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notatki"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/b_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showUserList"
            android:text="Lista Uczestników"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/b_zdjecie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zrób zdjęcie"
            app:layout_column="0"
            app:layout_row="6" />
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>